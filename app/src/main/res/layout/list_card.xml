<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/keyline_4"
    android:paddingBottom="@dimen/keyline_4"
    android:background="?attr/selectableItemBackground">

<ImageView
    android:id="@+id/list_card_icon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/keyline_4"
    android:visibility="gone"
    android:contentDescription="@string/list_icon_description" />

<TextView
    android:id="@+id/list_card_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_toEndOf="@id/list_card_icon"
    android:paddingTop="@dimen/keyline_4"
    android:maxLines="1"
    android:textAppearance="?attr/textAppearanceSubtitle1"/>

<TextView
    android:id="@+id/list_card_description"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/list_card_title"
    android:layout_gravity="center_vertical"
    android:layout_toEndOf="@id/list_card_icon"
    android:minLines="1"
    android:maxLines="2"
    android:textAppearance="?attr/textAppearanceBody2"
    android:visibility="gone"/>

</RelativeLayout>